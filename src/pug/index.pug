      // scrolldown
      .section__scrolldown.section__scrolldown--dark(js-scrolldown)
        i.icon.icon-scrolldown-dark

    // CTA :: START
    .section.section--dark(data-section-slide=8)
      .container
        .p-title.p-title--white Частью третьего сектора может быть каждый
        .cta-form
          .cta-form__head Только так можно создать общество, в котором будет приятно жить
          form(action="#" js-validate-join).cta-form__capture
            input(type="email" name="email" placeholder="Ваш email")
