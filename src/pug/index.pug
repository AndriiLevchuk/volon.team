        //-
      .slider-controls.slider-controls--orange
        .slider-control(data-slide="1").is-active
          .slider-control__dot
            img(src='img/partnerLogo_1.png' srcset='img/partnerLogo_1@2x.png 2x')
        .slider-control(data-slide="2")
          .slider-control__dot
            img(src='img/partnerLogo_2.png' srcset='img/partnerLogo_2@2x.png 2x')
